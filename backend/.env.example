# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Server Port (local development only)
PORT=5000

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5173,https://jni-consultant.vercel.app

# JWT Secret for authentication (generate strong random string)
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# Node Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Rate Limiting (optional overrides)
CONTACT_RATE_LIMIT_WINDOW_MS=900000
CONTACT_RATE_LIMIT_MAX=10
