# ============================================
# JNI Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# --------------------------------------------
# REQUIRED - Application will fail without these
# --------------------------------------------

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# JWT Secret for authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# --------------------------------------------
# OPTIONAL - These have sensible defaults
# --------------------------------------------

# Node Environment (development | production)
NODE_ENV=development

# Server Port (local development only)
PORT=5000

# CORS Configuration
# Comma-separated list of allowed origins
# In production, only these origins can access the API
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173,https://your-frontend.vercel.app

# Logging level (error | warn | info | debug)
LOG_LEVEL=info

# --------------------------------------------
# EMAIL NOTIFICATIONS (Optional)
# --------------------------------------------

# Resend API Key for email notifications
# Get one at: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx

# Admin email to receive notifications
ADMIN_EMAIL=admin@jamnasindo.id

# From email address (must be verified in Resend)
FROM_EMAIL=noreply@jamnasindo.id
